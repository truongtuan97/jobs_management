name: Deploy to Production

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    needs: test  # Chỉ chạy deploy nếu test pass

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Docker
        run: |
          docker build -t myapp .
          docker tag myapp my-docker-repo/myapp:latest

      - name: Push to Docker Hub
        run: |
          echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin
          docker push my-docker-repo/myapp:latest

      - name: Deploy to AWS
        run: |
          ssh -o StrictHostKeyChecking=no ubuntu@your-aws-ip "docker pull my-docker-repo/myapp:latest && docker-compose up -d"
